<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="Hello World" package="org.haxeflixel.helloworld" version="1.0.0" company="HaxeFlixel" />

	<app main="Main" path="export" file="HelloWorld" />

	<window width="1280" height="720" fps="60" vsync="false" background="#FFFFFF" hardware="true" />

	<source path="source" />
	<assets path="assets" />

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="hxlua" />
	<haxelib name="extension-androidtools" if="android" />

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_MOUSE" if="mobile" />
	<haxedef name="FLX_NO_KEYBOARD" if="mobile" />
	<haxedef name="FLX_NO_TOUCH" if="desktop" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!--Always enable Null Object Reference check-->
	<haxedef name="HXCPP_CHECK_POINTER" />
	<haxedef name="HXCPP_STACK_LINE" />
	<haxedef name="HXCPP_STACK_TRACE" />

	<section if="android">
		<!--Gradle-->
		<config:android gradle-version="7.4.2" gradle-plugin="7.3.1" />

		<!--Target SDK-->
		<config:android target-sdk-version="29" if="${lime < 8.1.0}" />
	</section>

</project>
